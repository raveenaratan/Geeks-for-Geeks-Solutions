#include<bits/stdc++.h>
using namespace std;
class Solution {
  public:
    int findMinDiff(vector<int>& a, int m) {
        // code here
        int n=a.size();
        sort(a.begin(),a.end());
        int ans=a[m-1]-a[0];
        for (int i=m-1;i<n;i++)
        {
            ans=min(ans,a[i]-a[i-m+1]);
        }
        return ans;
    }
};
